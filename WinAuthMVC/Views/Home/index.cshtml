@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        /* Custom CSS for centering the form */
        .center-screen {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Sign In</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
                    {
                        <div class="alert alert-danger" role="alert">Invalid login details</div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, htmlAttributes: new {@class = "font-weight-bold"})
                        @Html.TextBoxFor(m => m.Username, new {@class = "form-control", @placeholder = "Enter username"})
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, htmlAttributes: new {@class = "font-weight-bold"})
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Enter password"})
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
